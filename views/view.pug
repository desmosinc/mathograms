extends layout

block body
  body.is-loading
    .loading Loading...
    .compose-view
      .header
        img.branding(src='/img/mathogram.png')
      a.action-share.button-pink(href='/') Make your own Math-o-gram
        i.dcg-icon-chevron-right
      .messages
        textarea(disabled='disabled').message
        input(type='text', disabled='disabled').from
      .graph-paper
      .about
        p Made with love by Desmos. <a href='/about'>Learn more.</a>

block scripts
  script(src='/js/view.js')
